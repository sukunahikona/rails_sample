<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Rooms" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">ルーム一覧</h1>
    <%= link_to "新規ルーム作成", new_room_path, class: "new_btn" if admin_signed_in? %>
  </div>

  <div id="rooms" class="min-w-full">
    <% @rooms.each do |room| %>
      <%= render room %>
      <p>
        <%= link_to "詳細表示", room, class: "lnk_btn" %>
      </p>
    <% end %>
  </div>
</div>
