<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @room %>

    <%= link_to "編集", edit_room_path(@room), class: "mt-2 lnk_btn" if admin_signed_in? %>
    <%= link_to "戻る", rooms_path, class: "mt-2 lnk_btn" %>
    <div class="inline-block ml-2">
      <%= button_to "削除", @room, method: :delete, class: "mt-2 lnk_btn" if admin_signed_in? %>
    </div>
  </div>
</div>
